#!/usr/bin/env ruby

# hookit is installed as a bundled app, so we need bundler to load it for us
$:.unshift  '/opt/gomicro/hookit/vendor/bundle'
require 'bundler/setup'

# load hookit/setup to bootstrap hookit and import the dsl
require 'hookit/setup'

# Remove the IP if provided
if payload[:ips]

  execute "bring down vip" do
    command "/etc/microinit.d/eth00 stop"
    not_if { !File.exist?('/etc/microinit.d/eth00') }
  end

  execute "remove persistance" do
    command "rm -f /etc/microinit.d/eth00"
    not_if { !File.exist?('/etc/microinit.d/eth00') }
  end
end

service 'influxdb' do
  action :disable
  init :runit
  only_if {`sv status influxdb` =~ /^run/}
  not_if { !Dir.exist?('/etc/service/influxdb') }
end

directory '/etc/service/influxdb' do
  action :delete
  not_if { !Dir.exist?('/etc/service/influxdb') }
end

service 'kapacitor' do
  action :disable
  init :runit
  only_if {`sv status kapacitor` =~ /^run/}
  not_if { !Dir.exist?('/etc/service/kapacitor') }
end

directory '/etc/service/kapacitor' do
  action :delete
  not_if { !Dir.exist?('/etc/service/kapacitor') }
end
